<?xml version="1.0" encoding="UTF-8"?>
<beans default-lazy-init="true"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <!-- JMS 配置开始 -->
    <bean id="broker" class="org.apache.activemq.xbean.BrokerFactoryBean">
        <property name="config" value="${activemq.broker.config}"></property>
        <property name="start" value="true"></property>
    </bean>

    <!-- ActiveMQ VM连接工厂 -->
    <bean id="vmConnectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory"
          depends-on="broker">
        <property name="brokerURL" value="${activemq.broker.url}"/>
        <!--
                    jms.broker_url -->
        <!-- 对PERSISTENT的消息进行异步发送(NON_PERSISTENT消息默认异步发送) -->
        <property name="useAsyncSend" value="true"/>
        <property name="messagePrioritySupported" value="false"></property>
    </bean>

    <!-- Spring Caching 连接工厂 为客户端提供缓存功能 -->
    <bean id="vmCachingConnectionFactory"
          class="org.springframework.jms.connection.CachingConnectionFactory">
        <property name="targetConnectionFactory" ref="vmConnectionFactory"/>
        <property name="sessionCacheSize" value="${activemq.producer.sessionCacheSize}"/>
    </bean>

    <!-- ActiveMQ TCP连接工厂 -->
    <bean id="tcpConnectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
        <property name="brokerURL" value="${activemq.tradecenter.broker.url}"/>
        <!--
                    jms.broker_url -->
        <!-- 对PERSISTENT的消息进行异步发送(NON_PERSISTENT消息默认异步发送) -->
        <property name="useAsyncSend" value="true"/>
        <property name="messagePrioritySupported" value="false"></property>
    </bean>

    <!-- Spring Caching tcp连接工厂 为客户端提供缓存功能 -->
    <bean id="tcpCachingConnectionFactory"
          class="org.springframework.jms.connection.CachingConnectionFactory">
        <property name="targetConnectionFactory" ref="tcpConnectionFactory"/>
        <property name="sessionCacheSize" value="${activemq.producer.sessionCacheSize}"/>
    </bean>
</beans>